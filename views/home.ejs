<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
    <title>Eligram</title>
  </head>
  <body style="background-color: rgba(255, 228, 196, 0.7)">
    <nav class="navbar navbar-dark bg-dark navbar-expand-md">
      <div class="container">
        <a class="navbar-brand" href="#">
          <span class="mb-0 h1">Eligram</span>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile/<%= user.username %>"
                >Profile</a
              >
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDarkDropdownMenuLink"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
              </a>
              <ul
                class="dropdown-menu dropdown-menu-dark"
                aria-labelledby="navbarDarkDropdownMenuLink"
              >
                <li><a class="dropdown-item" href="/new">New Post</a></li>
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/auth/logout">Log Out</a>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Welcome <%= user.username %>
    <form action="/auth/deleteaccount" method="POST">
      <input type="hidden" name="username" value="<%= user.username %>" />
      <button type="submit">Delete account</button>
    </form> -->

    <!-- fullname -->
    <!--  -->

    <main class="mt-4">
      <div class="container">
        <div class="row">
          <div class="col-8" style="border-right: 2px solid black"></div>
          <div class="col-4" style="height: 80vh; overflow-y: scroll">
            <h3 style="width: 100%">Suggested People</h3>
            <hr />
            <% suggested.forEach(element => { %>
            <div class="container py-2">
              <img
                src="<%= element.profileUrl %>"
                alt="<%= element.firstname %>"
                style="
                  height: 50px;
                  width: 50px;
                  border: 0.1px solid grey;
                  object-fit: cover;
                  border-radius: 50%;
                "
              />
              <a
                href="/profile/<%= element.username %>"
                style="text-decoration: none; color: black"
                ><%= element.firstname + ' ' + element.lastname %></a
              >
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </main>

    <script src="/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
